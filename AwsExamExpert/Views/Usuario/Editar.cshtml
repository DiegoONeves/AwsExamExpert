@model AwsExamExpert.Models.Usuario

@{
    ViewData["Title"] = "Editar";
}

<h1>Editar</h1>

<h4>Usuario</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Editar">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <input asp-for="CodigoUsuario" type="hidden" />

            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="WhatsApp" class="control-label"></label>
                <input asp-for="WhatsApp" class="form-control" />
                <span asp-validation-for="WhatsApp" class="text-danger"></span>
            </div>
            @if (User.Identity.IsAuthenticated)
            {
                @if (User.IsInRole("Administrador"))
                {
                    <div class="form-group form-check">
                        <label class="form-check-label">
                            <input class="form-check-input" asp-for="Administrador" /> @Html.DisplayNameFor(model => model.Administrador)
                        </label>
                    </div>
                    <div class="form-group form-check">
                        <label class="form-check-label">
                            <input class="form-check-input" asp-for="Liberado" /> @Html.DisplayNameFor(model => model.Liberado)
                        </label>
                    </div>

                    <div class="form-group form-check">
                        <label class="form-check-label">
                            <input class="form-check-input" asp-for="RenovarCadastro" /> @Html.DisplayNameFor(model => model.RenovarCadastro)
                        </label>
                    </div>
                }
            }
            <div class="form-group">
                <label asp-for="DataDeCadastro" class="control-label"></label>
                <input disabled asp-for="DataDeCadastro" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="DataDeVencimento" class="control-label"></label>
                <input disabled asp-for="DataDeVencimento" class="form-control" />
                <input type="hidden" asp-for="DataDeVencimento" />
            </div>
            <div class="form-group">
                <input type="submit" value="Salvar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
@if (User.Identity.IsAuthenticated)
{
    @if (User.IsInRole("Administrador"))
    {
        <div>
            <a asp-action="Index">Back to List</a>
        </div>
    }
}
    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }
