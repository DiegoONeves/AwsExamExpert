@model AwsExamExpert.Models.Pergunta

@{
    ViewData["Title"] = "Cadastrar";
}

<h1>Cadastrar</h1>

<h4>Pergunta</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Cadastrar">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="CodigoPergunta" class="control-label"></label>
                <input asp-for="CodigoPergunta" class="form-control" />
                <span asp-validation-for="CodigoPergunta" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CodigoProva" class="control-label"></label>
                <input asp-for="CodigoProva" class="form-control" />
                <span asp-validation-for="CodigoProva" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Texto" class="control-label"></label>
                <input asp-for="Texto" class="form-control" />
                <span asp-validation-for="Texto" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="MultiplaEscolha" /> @Html.DisplayNameFor(model => model.MultiplaEscolha)
                </label>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Ativo" /> @Html.DisplayNameFor(model => model.Ativo)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="CodigoDominio" class="control-label"></label>
                <input asp-for="CodigoDominio" class="form-control" />
                <span asp-validation-for="CodigoDominio" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

